{
  "$schema": "https://unpkg.com/release-it/schema/release-it.json",
  "git": {
    "requireBranch": "main",
    "commitMessage": "chore: release ${version}"
  },
  "hooks": {
    "before:init": ["git fetch --prune --prune-tags origin"],
    "after:bump": "npx auto-changelog -p"
  },
  "github": {
    "release": true
  }
}
